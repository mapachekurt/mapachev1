# Opportunity Discovery Agents - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Google Cloud Platform
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_API_KEY=your-google-api-key

# ============================================
# Validation Agent - Social Media APIs
# ============================================

# Reddit API (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Twitter/X API (get from https://developer.twitter.com)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Optional: HackerNews API (no key required, but can set endpoint)
HACKERNEWS_API_ENDPOINT=https://hn.algolia.com/api/v1

# ============================================
# Opportunity Agent - Research APIs
# ============================================

# GitHub API (get from https://github.com/settings/tokens)
GITHUB_TOKEN=your_github_token

# Optional: Google Code Wiki endpoint (if using)
GOOGLE_CODE_WIKI_ENDPOINT=https://your-code-wiki-endpoint

# ============================================
# Orchestrator Agent - Integration APIs
# ============================================

# Agent Endpoints (set after deployment)
VALIDATION_AGENT_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/your-project/locations/us-central1/agents/validation-agent
OPPORTUNITY_AGENT_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/your-project/locations/us-central1/agents/opportunity-agent

# Linear API (get from https://linear.app/settings/api)
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxxxxxxxxxx
LINEAR_TEAM_ID=your-team-id

# ============================================
# Optional: A2A Protocol Registry
# ============================================
A2A_REGISTRY_URL=https://your-a2a-registry.com

# ============================================
# Development Settings
# ============================================
DEBUG=false
LOG_LEVEL=INFO
